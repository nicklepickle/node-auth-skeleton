<!DOCTYPE html>
<html>
<head>
  <title>{{title}}</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/main.css">
  <script src="/scripts/jquery-3.5.0.min.js" type="text/javascript"></script>
  <script src="/scripts/util.js" type="text/javascript"></script>
  {{#each scripts}}
  <script src="{{this}}" type="text/javascript"></script>
  {{/each}}
</head>
<body>
  <header>
    <h1><a href="/">Express</a></h1>
    <div id="user-header">
    {{#if user}}
      <a href="/users/profile">{{user.name}}</a> | <a href="/users/logout">Log Out</a>
    {{else}}
      <a href="/users/create">Create User</a> | <a href="/users/login">Log In</a>
    {{/if}}
    </div>
  </header>
  <div id="main">
    {{{body}}}
  </div>
</body>
</html>
